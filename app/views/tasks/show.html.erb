<p id="notice"><%= notice %></p>

<h1>
  <%= @task.title %>
</h1>

<div class='ui comments'>

  <div class='comment'>
    <div class='content'>
      <div class='text'>
        <%= @task.body %>
      </div>
      <div class='metadata'>
        <span class='date'>
          <%= @task.created_at %>
        </span>
      </div>
    </div>
  </div>

  <% @task.comments.each do |comment| %>
    <% if comment.persisted? %>
      <div class='comment'>
        <div class='content'>
          <div class='text'>
            <%= comment.body %>
          </div>
          <div class='metadata'>
            <span class='date'>
              <%= comment.created_at %>
            </span>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>

</div>

<%= form_for([@task.project, @task, @comment], html: {class: 'ui reply form'}) do |f| %>
  <% if @comment.errors.any? %>
    <div id='error_explanation'>
      <h2><%= pluralize(@comment.errors.count, 'error') %> prohibited this project from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='field'>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.submit class: 'ui blue laveled submit icon button' %>
  </div>
<% end %>

<%= link_to 'Back', project_tasks_path(@task.project) %>
